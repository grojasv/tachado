---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
const dbUrl = import.meta.env.PUBLIC_FIREBASE_DATABASE_URL || '';
let dbOrigin = '';
try { if (dbUrl) dbOrigin = new URL(dbUrl).origin; } catch {}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.webmanifest" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<meta name="theme-color" content="#f3f7ff" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- SortableJS for drag and drop functionality -->
		<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
        {dbOrigin && (
            <>
                <link rel="preconnect" href={dbOrigin} crossOrigin="" />
                <link rel="dns-prefetch" href={dbOrigin} />
            </>
        )}
	</head>
	<body class="app-bg-fun">
		<main class="container mx-auto px-4 py-6 md:py-8">
			<slot />
		</main>
		<script>
			if ('serviceWorker' in navigator) {
				window.addEventListener('load', () => {
					navigator.serviceWorker.register('/sw.js').catch(() => {});
				});
			}
		</script>
	</body>
</html> 